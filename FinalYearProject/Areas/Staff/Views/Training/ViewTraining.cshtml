@model IEnumerable<FinalYearProject.Models.TrainingProgress>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- View Training Progress Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Employee Training Progress</h3>
                            <div>
                                <a class="btn btn-primary" asp-action="AssignEmployee">Assign Training</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            Staff Id
                                        </th>
                                        <th>
                                            Training Id
                                        </th>
                                        <th>
                                            Completion
                                        </th>
                                        <th>
                                            Duration Left
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.staff_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.training_id)
                                            </td>
                                            @if (item.completion)
                                            {
                                                <td>
                                                    Complete
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    Inprogress
                                                </td>
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => item.duration_left)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>