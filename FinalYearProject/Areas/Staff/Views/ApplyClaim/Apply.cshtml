@model FinalYearProject.Models.EmployeeClaim

@{
    ViewData["Title"] = "Apply for Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Apply Claim content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Apply for Claim</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Apply" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <!-- Hidden Fields -->
                            <input type="hidden" asp-for="staff_id" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="date_apply" class="form-label"></label>
                                        <input asp-for="date_apply" class="form-control" readonly />
                                        <span asp-validation-for="date_apply" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="claim_id" class="form-label"></label>
                                        <input asp-for="claim_id" class="form-control" readonly />
                                        <span asp-validation-for="claim_id" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="claimAmount" class="form-label"></label>
                                        <input asp-for="claimAmount" class="form-control" placeholder="Enter the claim amount" />
                                        <span asp-validation-for="claimAmount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-3">
                                        <label asp-for="claim_reason" class="form-label"></label>
                                        <input asp-for="claim_reason" class="form-control" placeholder="Provide a reason for the claim" />
                                        <span asp-validation-for="claim_reason" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="claimFile" class="form-label"></label>
                                        <input type="file" name="claimFile" class="form-control" />
                                        <span asp-validation-for="claimFile" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <button asp-route-id="@Model" type="submit" id="submit-btn" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Apply</button>
                                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap and FontAwesome Stylesheets -->
