@model FinalYearProject.Models.ViewModels.EmployeeEditClaimVM

@{
    ViewData["Title"] = "Edit Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Edit Claim content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Edit Your Claim</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Hidden Fields -->
                            <input type="hidden" asp-for="claim.claim_id" value="@Model.claim.claim_id" />
                            <input type="hidden" asp-for="claim.staff_id" value="@Model.claim.staff_id" />
                            <input type="hidden" asp-for="claim.date_apply" value="@Model.claim.date_apply.ToString("yyyy-MM-ddTHH:mm:ss")" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="claimAmount" class="form-label">Claim Amount (RM)</label>
                                        <input asp-for="claimAmount" class="form-control" placeholder="Enter claim amount" />
                                        <span asp-validation-for="claimAmount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="claim_reason" class="form-label">Claim Reason</label>
                                        <input asp-for="claim_reason" class="form-control" placeholder="Enter claim reason" />
                                        <span asp-validation-for="claim_reason" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Current File</label>
                                        <input asp-for="claim.claimFile" class="form-control mb-2" readonly />
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-3">
                                        <label class="form-label">Upload New File</label>
                                        <input type="file" name="claimFile" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <button type="submit" id="submit-btn" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save it</button>
                                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>



