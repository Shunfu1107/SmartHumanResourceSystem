@model FinalYearProject.Models.EmployeeClaim

@{
    ViewData["Title"] = "Delete Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Action Buttons -->
<div class="py-3">
    <div class="container-fluid py-2 ">
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <h2 class="flex-shrink-0">Are you sure you want to delete?</h2>
            </div>
            <div class="text-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="claim_id" />
                    <button type="submit" value="Yes, Delete" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Yes,Delete</button>
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Claim content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header bg-danger bg-opacity-10 border-danger border-opacity-25">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-triangle text-danger fs-4 me-3"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="mb-0 text-danger">Delete Confirmation</h5>
                                <p class="mb-0 text-muted small">This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="staff_id" class="form-label"></label>
                                    <input asp-for="staff_id" class="form-control" placeholder="@Html.DisplayFor(model => model.EmployeeDetails.employee_id)" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="approval_status" class="form-label"></label>
                                    <input asp-for="approval_status" class="form-control" placeholder="@Html.DisplayFor(model => model.approval_status)" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="date_apply" class="form-label"></label>
                                    <input asp-for="date_apply" class="form-control" placeholder="@Html.DisplayFor(model => model.date_apply)" readonly />
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-3">
                                    <label asp-for="claim_reason" class="form-label"></label>
                                    <input asp-for="claim_reason" class="form-control" placeholder="@Html.DisplayFor(model => model.claim_reason)" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="claimFile" class="form-label"></label>
                                    <input asp-for="claimFile" class="form-control" placeholder="@Html.DisplayFor(model => model.claimFile)" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap Stylesheet and Icons -->
