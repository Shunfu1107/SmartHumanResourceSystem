@model FinalYearProject.Models.CompanyKPI

@{
    ViewData["Title"] = "Create Company KPI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
@await Html.PartialAsync("_Breadcrumb")

<!-- Company KPI content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Create Company KPI</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger">@ViewData["ErrorMessageDate"]</div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="KPI_id" class="form-label">KPI Id</label>
                                        <input asp-for="KPI_id" class="form-control" readonly />
                                        <span asp-validation-for="KPI_id" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="company_id" class="form-label">Company Id</label>
                                        <input asp-for="company_id" class="form-control" readonly />
                                        <span asp-validation-for="company_id" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="target_name" class="form-label">Target Name</label>
                                        <input asp-for="target_name" class="form-control" required />
                                        <span asp-validation-for="target_name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="target_KPI" class="form-label">Target KPI</label>
                                        <input asp-for="target_KPI" class="form-control" required />
                                        <span asp-validation-for="target_KPI" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="hit_KPI_allowance" class="form-label">Hit KPI Allowance</label>
                                        <input asp-for="hit_KPI_allowance" class="form-control" required />
                                        <span asp-validation-for="hit_KPI_allowance" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="start_date" class="form-label">Start Date</label>
                                        <input asp-for="start_date" type="date" class="form-control" required />
                                        <span asp-validation-for="start_date" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="end_date" class="form-label">End Date</label>
                                        <input asp-for="end_date" type="date" class="form-control" required />
                                        <span asp-validation-for="end_date" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="status" class="form-label">Status</label>
                                        <select asp-for="status" class="form-select mb-3" asp-items="@(new SelectList(ViewBag.statusOptions))"></select>
                                        <span asp-validation-for="status" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <partial name="_CreateBackPartial"></partial>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

