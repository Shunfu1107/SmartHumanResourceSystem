@model FinalYearProject.Models.Notification

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Action Buttons -->
<div class="py-3">
    <div class="container-fluid py-2">
        <div class="text-end">
            <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

<!-- Notification content -->
<section class="pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">@Html.DisplayFor(model => model.notification_title)</h3>
                    </div>
                    <div class="card-body">
                        <div class="col-lg-12">
                            <p class="text-sm text-end ">@Html.DisplayFor(model => model.notification_date)</p>
                        </div>
                        <p class="text-sm">@Html.Raw(Model.notification_content)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>