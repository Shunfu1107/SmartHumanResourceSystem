@model FinalYearProject.Models.Leave

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Leave content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Apply Leave</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger">@ViewBag.message</div>
                            <input type="hidden" asp-for="staff_id" />
                            <input type="hidden" asp-for="leave_id" />
                            <input type="hidden" asp-for="date_created" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="leave_start" class="form-label">Leave Start</label>
                                        <input asp-for="leave_start" class="form-control" />
                                        <span asp-validation-for="leave_start" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="leave_end" class="form-label">Leave End</label>
                                        <input asp-for="leave_end" class="form-control" />
                                        <span asp-validation-for="leave_end" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="leaveType" class="form-label">Leave Type</label>
                                        <select asp-for="leaveType" class="form-select mb-3" asp-items="ViewBag.leaveType"></select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="leave_reason" class="form-label">Leave Reason</label>
                                        <input asp-for="leave_reason" class="form-control" />
                                        <span asp-validation-for="leave_reason" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="doc_filepath" class="form-label">File Prove</label>
                                        <input type="file" name="leaveFile" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <button type="submit" asp-route-id="@Model" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Apply</button>
                                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


