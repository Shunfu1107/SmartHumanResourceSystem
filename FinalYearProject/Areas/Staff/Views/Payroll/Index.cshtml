@model IEnumerable<FinalYearProject.Models.Payroll>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Payroll Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Payroll</h3>
                            <div>
                                <a class="btn btn-primary" asp-action="CreatePayroll">Create Payroll</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            Payroll Id
                                        </th>
                                        <th>
                                            Staff Id
                                        </th>
                                        <th>
                                            Month Salary
                                        </th>
                                        <th>
                                            Overtime Pay
                                        </th>
                                        <th>
                                            Total KWSP
                                        </th>
                                        <th>
                                            Total Zakat
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.payroll_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.staff_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.month_salary)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.overtime_pay)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.kwsp_total)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.zakat_total)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>