@model IEnumerable<FinalYearProject.Models.Payrate>

@{
    ViewData["Title"] = "Views";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Payrate Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Payrate</h3>
                            <div>
                                <a class="btn btn-primary" asp-action="CreatePayrate">Create Payrate</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            Payrate Id
                                        </th>
                                        <th>
                                            Payrate Name
                                        </th>
                                        <th>
                                            Payrate per Hour
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.payrate_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.payrate_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.payrate_ratePerHour)
                                            </td>

                                            <td>
                                                <a class="btn btn-primary" asp-action="EditPayrate" asp-route-id="@item.payrate_id">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
