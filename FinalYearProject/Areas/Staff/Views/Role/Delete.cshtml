@model FinalYearProject.Models.ViewModels.RolePermissionVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_Breadcrumb")

<!-- Action Buttons -->
<div class="py-3">
    <div class="container-fluid py-2 ">
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <h2 class="flex-shrink-0">Are you sure you want to delete?</h2>
            </div>
            <div class="text-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Role.role_id" />
                    <button type="submit" value="Yes, Delete" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Yes,Delete</button>
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Role content -->
<section class="pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header bg-danger bg-opacity-10 border-danger border-opacity-25">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-triangle text-danger fs-4 me-3"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="mb-0 text-danger">Delete Confirmation</h5>
                                <p class="mb-0 text-muted small">This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Role.date_created" type="hidden" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role.role_name" class="form-label">Role Name</label>
                                    <input asp-for="Role.role_name" class="form-control" placeholder="@Html.DisplayFor(model => model.Role.role_name)" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role.company_id" class="form-label">Company</label>
                                    <input asp-for="Role.company_id" class="form-control" placeholder="ViewBag.company_id" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">Permissions</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="employeeView" disabled /> @Html.DisplayNameFor(model => model.employeeView)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="employeeRegister" disabled /> @Html.DisplayNameFor(model => model.employeeRegister)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="employeeManage" disabled /> @Html.DisplayNameFor(model => model.employeeManage)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="roleManage" disabled /> @Html.DisplayNameFor(model => model.roleManage)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="shiftManage" disabled /> @Html.DisplayNameFor(model => model.shiftManage)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="trainingManage" disabled /> @Html.DisplayNameFor(model => model.trainingManage)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="payrateManage" disabled /> @Html.DisplayNameFor(model => model.payrateManage)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
