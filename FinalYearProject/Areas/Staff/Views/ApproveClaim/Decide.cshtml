@model FinalYearProject.Models.EmployeeClaim

@{
    ViewData["Title"] = "Decide Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Decide Claim content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Decide Claim</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Decide">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Hidden Fields -->
                            <input type="hidden" asp-for="claim_id" />
                            <input type="hidden" asp-for="staff_id" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="staff_id" class="form-label"></label>
                                        <input asp-for="staff_id" class="form-control" placeholder="@Model.staff_id" readonly />
                                        <span asp-validation-for="date_apply" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="date_apply" class="form-label"></label>
                                        <input asp-for="date_apply" class="form-control" readonly />
                                        <span asp-validation-for="date_apply" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="claimAmount" class="form-label"></label>
                                        <input asp-for="claimAmount" class="form-control" readonly />
                                        <span asp-validation-for="claimAmount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-3">
                                        <label asp-for="claim_reason" class="form-label"></label>
                                        <input asp-for="claim_reason" class="form-control" readonly />
                                        <span asp-validation-for="claim_reason" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="claimFile" class="form-label"></label>
                                        <div>
                                            @if (!string.IsNullOrEmpty(Model.claimFile))
                                            {
                                                <a asp-action="Download" asp-route-id="@Model.claim_id" class="btn btn-primary">
                                                    <i class="fa fa-download"></i> Download File
                                                </a>
                                            }
                                            else
                                            {
                                                <span>No file uploaded.</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="approval_status" class="form-label"></label>
                                        <select asp-for="approval_status" class="form-select mb-3" asp-items="ViewBag.status"></select>
                                        <span asp-validation-for="approval_status" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-3">
                                        <label for="approvedAmount" class="form-label">Approved Amount (RM)</label>
                                        <input type="number" step="0.01" class="form-control" id="approvedAmount" name="approvedAmount" required placeholder="Enter approved amount" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="reject_reason" class="form-label"></label>
                                        <input asp-for="reject_reason" class="form-control" placeholder="Provide reason if rejected" />
                                        <span asp-validation-for="reject_reason" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <button type="submit" id="submit-btn" class="btn btn-primary">Save Decision</button>
                                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Bootstrap and FontAwesome -->
