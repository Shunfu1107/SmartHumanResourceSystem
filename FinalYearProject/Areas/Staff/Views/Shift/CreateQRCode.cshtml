
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <!-- Basic Form-->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Generate QR Code</h3>
                    </div>
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <form asp-action="CreateQRCode" class="w-100 text-center">
                            <div class="mb-3">
                                <label class="form-label">Select the shift to generate QR Code</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <select type="text" name="inputText" class="form-select me-2" asp-items="ViewBag.shiftID" style="max-width: 300px;"></select>
                                <input type="submit" value="Generate" class="btn btn-primary" />
                            </div>
                        </form>
                        @if (ViewBag.QRCode != null)
                        {
                            <img src="@ViewBag.QRCode" class="mt-4" style="width:200px;height:200px" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

