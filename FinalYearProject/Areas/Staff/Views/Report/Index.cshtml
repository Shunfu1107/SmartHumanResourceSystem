@model IEnumerable<FinalYearProject.Models.Report>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Report Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Report</h3>
                            <div>
                                <a class="btn btn-primary" asp-action="Create">Create Report</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.report_title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.report_date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.report_sender)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.report_receiver)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.report_status)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        @if (item.report_status != "Deleted")
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.report_title)
                                                </td>
                                                <td>
                                                    @item.report_date.ToString("dd-mm-yyyy")
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.report_sender)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.report_receiver)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.report_status)
                                                </td>
                                                <td>
                                                    @if (item.report_sender == ViewBag.CurrentUserId)
                                                    {
                                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.report_id">Edit</a>
                                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.report_id">Delete</a>
                                                    }
                                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.report_id">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>