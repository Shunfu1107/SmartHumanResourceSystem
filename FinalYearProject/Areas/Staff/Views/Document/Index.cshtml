@model FinalYearProject.Models.ViewModels.EmployeeDocumentListVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Document Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Notification</h3>
                            <div>
                                <a class="btn btn-primary" asp-action="Create" asp-route-id="@Model.owner.employee_id">Create Document</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.displayDocument.document_name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.displayDocument.date_created)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.displayDocument.expiry_date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.displayDocument.notify_date)
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.documentsOwned)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.document_name)
                                            </td>
                                            <td>
                                                @item.date_created.ToString("dd-mm-yyyy")
                                            </td>
                                            <td>
                                                @item.expiry_date.ToString("dd-mm-yyyy")
                                            </td>
                                            <td>
                                                @item.notify_date.ToString("dd-mm-yyyy")
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.document_id">Edit</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.document_id">Delete</a>
                                                <a class="btn btn-outline-primary" asp-action="Download" asp-route-id="@item.document_id">Download</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>