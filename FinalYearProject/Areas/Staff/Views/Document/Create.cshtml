@model FinalYearProject.Models.ViewModels.EmployeeDocumentVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Document content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Create Company</h3>
                    </div>
                    <div class="card-body">
                        <h6 style="color: darkred">@ViewBag.message</h6>
                        <form method="post" asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <input type="hidden" asp-for="employee_id" />
                            <input type="hidden" asp-for="document.owner_id" />

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="document.document_id" class="form-label"></label>
                                        <input asp-for="document.document_id" class="form-control" />
                                        <span asp-validation-for="document.document_id" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-3">
                                        <label asp-for="document.document_name" class="form-label"></label>
                                        <input asp-for="document.document_name" class="form-control" />
                                        <span asp-validation-for="document.document_name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="@Model.document.expiry_date" class="form-label"></label>
                                        <input asp-for="@Model.document.expiry_date" class="form-control" />
                                        <span asp-validation-for="@Model.document.expiry_date" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="@Model.document.notify_date" class="form-label"></label>
                                        <input asp-for="@Model.document.notify_date" class="form-control" />
                                        <span asp-validation-for="@Model.document.notify_date" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="@Model.document.document_path" class="form-label"></label>
                                        <input type="file" name="file" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <button type="submit" asp-route-id="@Model" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Create</button>
                                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

