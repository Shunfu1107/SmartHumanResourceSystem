@model IEnumerable<FinalYearProject.Models.CompanyKPI>

@{
    ViewData["Title"] = "KPI Targets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Employee KPI Progress Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">KPI Targets</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Target Name</th>
                                        <th>Target Amount (RM)</th>
                                        <th>Current Progress</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.target_name</td>
                                            <td>@item.target_KPI</td>
                                            <td>@item.CurrentProgress</td>
                                            <td>@item.start_date?.ToString("yyyy-MM-dd")</td>
                                            <td>@item.end_date?.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a asp-action="SubmitProof" asp-route-KPI_id="@item.KPI_id" class="btn btn-primary">
                                                    Submit Proof
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Bootstrap and FontAwesome -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ775" crossorigin="anonymous">
