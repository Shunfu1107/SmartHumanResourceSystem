@model FinalYearProject.Models.ProofSubmission

@{
    ViewData["Title"] = "Submit Proof";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Submit Proof content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Create Company KPI</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="SubmitProof" enctype="multipart/form-data" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="KPI_id" class="form-label">KPI ID</label>
                                        <input asp-for="KPI_id" class="form-control" readonly />
                                        <span asp-validation-for="KPI_id" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="KPIAmount" class="form-label">KPI Amount (RM)</label>
                                        <input asp-for="KPIAmount" class="form-control" type="number" step="0.01" required />
                                        <span asp-validation-for="KPIAmount" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="file" class="form-label">Upload Proof</label>
                                        <input type="file" class="form-control" name="file" id="file" required />
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-upload me-2"></i>Submit Proof</button>
                                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Bootstrap and FontAwesome -->
