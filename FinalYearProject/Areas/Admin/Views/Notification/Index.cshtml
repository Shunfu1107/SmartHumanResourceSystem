@model IEnumerable<FinalYearProject.Models.Notification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Notification Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Notification</h3>
                            <div>
                                <a class="btn btn-primary" asp-action="Create">Create Notification</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.notification_id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.notification_title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.notification_date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.notification_receiver)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.notification_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.notification_title)
                                            </td>
                                            <td>
                                                @item.notification_date.ToString("dd-mm-yyyy")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.notification_receiver)
                                            </td>
                                            <td>
                                                @if (@item.notification_type == "Normal Notification") {
                                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.notification_id">Edit</a>
                                                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.notification_id">Details</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.notification_id">Delete</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>