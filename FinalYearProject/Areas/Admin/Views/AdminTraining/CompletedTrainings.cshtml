@model IEnumerable<FinalYearProject.Models.EmployeeDetails>

@{
    ViewData["Title"] = "Interviewees Eligible for Promotion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Employee Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Interviewees Eligible for Promotion</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (Model.Count() > 0)
                            {
                                <table class="table text-sm mb-0 table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>Employee ID</th>
                                            <th>Name</th>
                                            <th>Company</th>
                                            <th>Current Role</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var employee in Model)
                                        {
                                            <tr>
                                                <td>@employee.employee_id</td>
                                                <td>@employee.employee_name</td>
                                                <td>@employee.parent_company</td>
                                                <td>@employee.Role?.role_name</td>
                                                <td>
                                                    <form asp-action="PromoteToStaff" asp-controller="AdminTraining" method="post">
                                                        <input type="hidden" name="employeeId" value="@employee.employee_id" />
                                                        <button type="submit" class="btn btn-primary">Promote to Staff</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>There are no interviewees eligible for promotion.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
