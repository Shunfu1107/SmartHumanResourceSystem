@model FinalYearProject.Models.Company

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Company content -->
<section class="pb-5 py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="h4 mb-0">Edit Company</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="company_id" />
                            <input type="hidden" asp-for="date_created" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="company_name" class="form-label">Company Name</label>
                                        <input asp-for="company_name" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.company_name)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="current_admin" class="form-label">Company Admin</label>
                                        <select asp-for="current_admin" class="form-select mb-3" asp-items="ViewBag.current_admin"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="address" class="form-label">Address</label>
                                        <input asp-for="address" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.address)" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="longitude" class="form-label">Longitude</label>
                                        <input asp-for="longitude" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.longitude)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="latitude" class="form-label">Latitude</label>
                                        <input asp-for="latitude" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.latitude)" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="paidLeaveYearly" class="form-label">Yearly Paid Leave</label>
                                        <input asp-for="paidLeaveYearly" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.paidLeaveYearly)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="paidMaxCarryover" class="form-label">Paid Max Carryover</label>
                                        <input asp-for="paidMaxCarryover" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.paidMaxCarryover)" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="sickLeaveYearly" class="form-label">Yearly Sick Leave</label>
                                        <input asp-for="sickLeaveYearly" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.sickLeaveYearly)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="sickMaxCarryover" class="form-label">Sick Max Carryover</label>
                                        <input asp-for="sickMaxCarryover" class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.sickMaxCarryover)" />
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom my-3 border-gray-200"></div>
                            <div class="row">
                                <div class="text-end">
                                    <partial name="_EditBackPartial" model="@Model.company_id"></partial>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>