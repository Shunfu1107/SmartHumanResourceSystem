@model IEnumerable<Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
@await Html.PartialAsync("_Breadcrumb")

<!-- Company Table -->
<section class="tables py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">Company</h3>
                            <div>
                                <a class="btn btn-primary" asp-action="Create">Create Company</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-sm mb-0 table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.company_name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.date_created)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Admin)
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.company_name)
                                            </td>
                                            <td>
                                                @item.date_created.ToString("dd-MM-yyyy")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.current_admin)
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.company_id">Edit</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.company_id">Delete</a>
                                                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.company_id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>