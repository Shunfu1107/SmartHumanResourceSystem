					</div>
				</div>
			</nav>
		</header>
		<!-- Body -->
		<section>
			<main role="main" class="pb-3 py-3">
				@RenderBody()
			</main>
		</section>
		<!-- End Body -->
		<!-- Footer -->
		<footer class="main-footer w-100 position-absolute bottom-0 start-0 py-2 border-top text-muted">
			<div class="container-fluid">
				<div class="row text-center gy-3">
					<div class="col-sm-6 text-sm-start">
						<p class="mb-0 text-sm text-gray-600">&copy; 2022 - FinalYearProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
					</div>
